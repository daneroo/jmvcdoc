<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
            "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
	<head>
		<title>JavaScriptMVC</title>
        <link rel="stylesheet" type='text/css' href='<%= pathToRoot %>/documentjs/jmvcdoc/style.css' />
		<style>
			.ui-menu {
				margin: 0px; padding: 0px;
				list-style-image:none;
				list-style-position:outside;
				list-style-type:none;
			}
			.ui-menu-item {
				float: left;
				/*padding:0.5em 1em;*/
				cursor: pointer;
			}
			.selected {
				background-color: #dddddd;
			}
			.selected a:link, 
			.selected a:visited,
			.selected a:hover,
			.selected a:active {
				color: #111111!important;
			}			
		</style>		
	</head>
	<body scroll="no">
	    
        <div id='documentation'>
	        <div id='top'>
	            <input id='search' type='input' disabled='true'/>
                <div id='defaults'>
                    <div style='color:white;float: right;margin-right: 10px; position: relative; top: -3px'>JavaScript<img src='jmvc/plugins/documentation/app/images/logo.png' style="position: relative; top: 5px;left: 2px"/></div>
					
					<ul id="menu" class="ui-menu">
						<li class="ui-menu-item">
                    		<a href="#&amp;search=&#42;&amp;who=index">Home</a>
						</li>
						<li class="ui-menu-item">						
	                    	<a href="#&amp;search=core">Core</a>
						</li>
						<li class="ui-menu-item">						
	                    	<a href="#favorites">Favorites</a>
						</li>
						<li class="ui-menu-item">						
							<a href="http://groups.google.com/group/javascriptmvc" class="red" title="Google Group Discussion">Discuss</a>
						</li>
						<li class="ui-menu-item">						
                    		<a href="http://javascriptmvc.googlecode.com/" class="red" title="Google Code SVN Repository">Google Code</a>
						</li>
					</ul>
                    
                </div>
	        </div>
            
            <div id='bottom'>
                
            
                <div id='left'>
                    <a>Loading ... </a>
                </div>
                <div id='doc_container'>
                    <div id='doc'>
                        <%= this.indexPage ? this.indexPage.real_comment : "Add a page named 'index' to see something here." %>
                    </div>
                </div>
            </div>
        </div>
        <div id='low'>
            <a href="http://jupiterit.com">&copy; Jupiter IT - JavaScriptMVC Training and Support</a>
        </div>
		<script type='text/javascript'>
            DOCS_LOCATION = "docs/" //adds searchData to this
        </script>
        <script type='text/javascript' 
                src='<%= pathToRoot %>/steal/steal.js?steal[app]=documentjs/jmvcdoc&steal[env]=production'>   
        </script>
	</body>
</html>